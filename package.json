{
  "name": "tc-e2e",
  "version": "0.0.1",
  "description": "Topcoder - Frontend E2E Testing Suite",
  "main": "test.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "allure-commandline": "^2.5.0",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-register": "^6.11.6",
    "chai": "^4.1.2",
    "chai-url": "^1.0.4",
    "chance": "^1.0.13",
    "dropbox-v2-api": "^2.1.11",
    "easy-zip2": "^2.0.0",
    "mocha": "^5.0.0",
    "node-fetch": "^1.6.0",
    "nodemailer": "^4.4.2",
    "phantomjs-prebuilt": "^2.1.16",
    "rimraf": "^2.6.2",
    "selenium-standalone": "^6.0.1",
    "sinon": "^4.2.2",
    "wdio-allure-reporter": "^0.3.2",
    "wdio-firefox-profile-service": "0.1.1",
    "wdio-mocha-framework": "^0.5.8",
    "wdio-phantomjs-service": "^0.2.2",
    "wdio-selenium-standalone-service": "0.0.10",
    "wdio-spec-reporter": "0.1.3",
    "webdriverio": "^4.2.3"
  },
  "scripts": {
    "postinstall": "npm install -g selenium-standalone",
    "kill-selenium": "kill -15 $( lsof -i:4444 -t )",
    "test": "npm run clean && ./node_modules/.bin/wdio wdio.conf.js && npm run html-report || npm run html-report && npm run send-report",
    "test:TC-ConnApp": "npm run clean && ./node_modules/.bin/wdio wdio.conf.js --spec TC_ConnApp && npm run html-report || npm run html-report && npm run send-report",
    "help": "./node_modules/.bin/wdio --help",
    "clean": "./node_modules/rimraf/bin.js allure-data allure-report errorShots",
    "html-report": "./node_modules/.bin/allure generate allure-data",
    "send-report": "node test/helpers/email.js",
    "lint": "./node_modules/.bin/eslint test"
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-plugin-webdriverio": "^1.0.1"
  }
}
